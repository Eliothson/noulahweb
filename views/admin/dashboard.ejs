<section class="services6 cid-rZ5GrGCAl4" id="services6-e">
    
    <div class="container">
        <div class="row">
            <!--Titles-->
            <div class="title col-12">
                <h2 class="align-left mbr-fonts-style m-0 display-1"> 
                    Liste des Publications</h2>
            </div>
            <!--Card-1-->
            <% 
            if (locals.articles){
            articles.forEach(function (article){ %>
            <div class="card col-12 pb-5">
                <div class="card-wrapper media-container-row media-container-row">
                    <div class="card-box">
                        <div class="row">
                            <% if (article.lienImage !=="false") {%>
                            <div class="col-12 col-md-2">
                                <!--Image-->
                                <% if (article.mediatype =="image/jpeg" || article.mediatype =="image/png" ){%>
                                <div class="mbr-figure">
                                    <img src="<%= article.lienImage %>" alt="Noulha">
                                </div>
                                <% } else {%>    
                                <div class="mbr-figure">
                                    <video class="video-block" style="width: 80%" src="<%= article.lienImage %>" controls  alt="image Matitech">
                                    </div>
                                <% } %>
                            </div>
                            <% } %>
                            <div class="col-12 col-md-10">
                                <div class="row">
                                    <div class="top-line ">
                                        <h4 class="card-title mbr-fonts-style display-5">
                                            <%= article.titre %>
                                        </h4>
                                        <p class="mbr-text mbr-fonts-style display-7">
                                            <%= article.message %>
                                        </p>
                                        
                                    </div>
                                    <div class="bottom-line">
                                        <div class="mbr-text cost mbr-fonts-style m-0 display-7">
                                            <a href="/modifier/<%= article.id %>" type="submit" class="btn btn-form btn-danger display-7">Modifier</a>
                                        
                                            <a href="/supprimer/<%= article.id %>" type="submit" class="btn btn-form btn-danger display-7">Suprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) }%>
        </div>
    </div>
</section>


<script src="jquery-1.9.1.js"></script>
<script>
function previewImage(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#preview-image').attr('src', e.target.result);
    }
    reader.readAsDataURL(input.files[0]);
  }
}
</script>
  
  
